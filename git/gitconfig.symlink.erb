[user]
        name = David Kelso
        email = <%= SECRETS[:email] %>
[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[github]
        user = zaius
        token = <%= SECRETS[:github_token] %>
[core]
        excludesfile = <%= ENV['HOME'] %>/.gitignore
        pager = less -FRSX
        whitespace=fix,trailing-space

[diff]  
      renamelimit = 0

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = red
        untracked = cyan

[branch "master"]
        rebase = true
